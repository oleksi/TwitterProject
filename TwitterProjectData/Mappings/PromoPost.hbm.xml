<?xml version="1.0" encoding="utf-8" ?> 

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="TwitterProjectModel" 
                   namespace="TwitterProjectModel">
 
  <class name="PromoPost" table="PromoPosts">
		<id name="Id" column="PromoPostId">
			<generator class="identity"></generator>
		</id>
		<property name="AffiliateOffer" column="AffiliateOfferId" not-null="true"></property>
		<property name="PromoPostText" not-null="true"></property>
	</class>
  
</hibernate-mapping>